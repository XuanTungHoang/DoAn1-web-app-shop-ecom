<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Detail_sanpham">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_chitietsp"
        app:titleTextColor="#f000"
        android:background="#973131"
        app:title="Chi tiết sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgView_chitietsp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="220dp">
        </ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtView_tenspchitiet"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:textColor="#f000"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtView_giaspchitiet"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Giá sản phẩm"
                android:textColor="#f00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <Spinner
                android:id="@+id/Spinner"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="47dp"
                android:layout_margin="5dp"
                android:background="@drawable/spinner"
                android:padding="8dp"
                android:textAlignment="center"></Spinner>

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btn_themvaogiohang"
                android:textColor="#f00"
                android:textSize="15sp"
                android:text="Thêm vào giỏ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#f00"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:text="Thông tin sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:id="@+id/txtView_chitietsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </ScrollView>
    </LinearLayout>

</LinearLayout>